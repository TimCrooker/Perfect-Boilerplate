  "name": "perfect-boilerplate",
  "version": "0.1.0",
  "description": "The ultimate boilerplate cli for modern saas applications",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TimCrooker/Perfect-Boilerplate"
  },
  "author": "Tim Crooker <timothycrooker@gmail.com>",
  "main": "index.tsx",
